@{
    ViewData["Title"] = "Quên mật khẩu";
}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card p-5 shadow-lg border-0 rounded-4">
                <div class="text-center mb-4">
                    <i class="fa-solid fa-envelope-circle-check fa-3x text-primary mb-2"></i>
                    <h3 class="fw-bold text-primary mb-2">Quên mật khẩu?</h3>
                    <div class="text-muted mb-2">Nhập email đã đăng ký để nhận mã xác nhận đặt lại mật khẩu.</div>
                </div>
                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger small">@ViewBag.Error</div>
                }
                <form asp-action="ForgotPassword" method="post" class="mb-2">
                    <div class="mb-4">
                        <label class="form-label fw-semibold">Email</label>
                        <input type="email" name="email" class="form-control form-control-lg rounded-3" placeholder="Nhập email của bạn" required autofocus />
                    </div>
                    <button type="submit" class="btn btn-primary btn-lg w-100 rounded-3 fw-bold py-2">
                        <i class="fa-solid fa-paper-plane me-2"></i>Gửi mã xác nhận
                    </button>
                </form>
                <div class="mt-4 text-center">
                    <a href="/Auth/Index" class="text-secondary small text-decoration-none"><i class="fa fa-arrow-left me-1"></i>Quay lại đăng nhập</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/js/all.min.js"></script>
} 