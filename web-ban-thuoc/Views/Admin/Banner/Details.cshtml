@model web_ban_thuoc.Models.Banner

<div class="row">
    <div class="col-md-6">
        <div class="text-center mb-4">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" alt="@Model.Title" class="img-fluid rounded shadow" style="max-height: 300px; object-fit: cover;">
            }
            else
            {
                <div class="bg-light rounded d-flex align-items-center justify-content-center" style="height: 300px;">
                    <i class="fas fa-image fa-3x text-muted"></i>
                </div>
            }
        </div>
    </div>
    <div class="col-md-6">
        <h4 class="fw-semibold mb-3">@Model.Title</h4>
        
        <div class="mb-3">
            <label class="fw-semibold text-muted">Mô tả:</label>
            <p class="mb-0">@(string.IsNullOrEmpty(Model.Description) ? "Không có mô tả" : Model.Description)</p>
        </div>
        
        <div class="row mb-3">
            <div class="col-6">
                <label class="fw-semibold text-muted">Loại Banner:</label>
                <div>
                    @if (!string.IsNullOrEmpty(Model.BannerType))
                    {
                        @switch (Model.BannerType)
                        {
                            case "main":
                                <span class="badge bg-primary">Banner chính</span>
                                break;
                            case "sub":
                                <span class="badge bg-info">Banner phụ</span>
                                break;
                            case "promotion":
                                <span class="badge bg-warning">Khuyến mãi</span>
                                break;
                            default:
                                <span class="badge bg-secondary">@Model.BannerType</span>
                                break;
                        }
                    }
                    else
                    {
                        <span class="text-muted">Chưa chọn</span>
                    }
                </div>
            </div>
            <div class="col-6">
                <label class="fw-semibold text-muted">Thứ tự:</label>
                <div class="fw-bold">@Model.SortOrder</div>
            </div>
        </div>
        
        <div class="row mb-3">
            <div class="col-6">
                <label class="fw-semibold text-muted">Trạng thái:</label>
                <div>
                    @if (Model.IsActive)
                    {
                        <span class="badge bg-success">Hoạt động</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Không hoạt động</span>
                    }
                </div>
            </div>
            <div class="col-6">
                <label class="fw-semibold text-muted">Ngày tạo:</label>
                <div>@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</div>
            </div>
        </div>
        
        @if (!string.IsNullOrEmpty(Model.LinkUrl))
        {
            <div class="mb-3">
                <label class="fw-semibold text-muted">Link:</label>
                <div>
                    <a href="@Model.LinkUrl" target="_blank" class="text-decoration-none">
                        <i class="fas fa-external-link-alt me-1"></i>@Model.LinkUrl
                    </a>
                </div>
            </div>
        }
        
        @if (Model.UpdatedAt.HasValue)
        {
            <div class="mb-3">
                <label class="fw-semibold text-muted">Cập nhật lần cuối:</label>
                <div>@Model.UpdatedAt.Value.ToString("dd/MM/yyyy HH:mm")</div>
            </div>
        }
    </div>
</div>

<div class="text-center mt-4">
    <a href="@Url.Action("Edit", "AdminBanner", new { id = Model.BannerId })" class="btn btn-warning me-2">
        <i class="fas fa-edit me-1"></i>Sửa Banner
    </a>
    <a href="@Url.Action("Delete", "AdminBanner", new { id = Model.BannerId })" class="btn btn-danger">
        <i class="fas fa-trash me-1"></i>Xóa Banner
    </a>
</div> 