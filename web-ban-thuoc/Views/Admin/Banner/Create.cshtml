@model web_ban_thuoc.Models.Banner

@{
    ViewData["Title"] = "Thêm Banner";
    Layout = "~/Views/Admin/_Layout.cshtml";
}

<div class="container-fluid py-3">
    <form asp-action="Create" method="post" enctype="multipart/form-data" class="row g-4 bg-white shadow-sm rounded-4 p-4">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        
        <div class="col-md-6">
            <label class="form-label fw-semibold">Tiêu đề banner</label>
            <input asp-for="Title" class="form-control" placeholder="Nhập tiêu đề banner" required />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        
        <div class="col-md-6">
            <label class="form-label fw-semibold">Loại banner</label>
            <select asp-for="BannerType" class="form-select" required>
                <option value="">Chọn loại banner</option>
                <option value="FullWidth">Full Width (Toàn màn hình)</option>
                <option value="Main">Main (Slider chính)</option>
                <option value="Side">Side (Banner bên phải)</option>
            </select>
            <span asp-validation-for="BannerType" class="text-danger"></span>
        </div>
        
        <div class="col-md-12">
            <label class="form-label fw-semibold">Mô tả</label>
            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Nhập mô tả banner (không bắt buộc)"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        
        <div class="col-md-6">
            <label class="form-label fw-semibold">Link</label>
            <input asp-for="LinkUrl" class="form-control" placeholder="https://example.com" />
            <span asp-validation-for="LinkUrl" class="text-danger"></span>
            <div class="form-text">Link khi click vào banner (không bắt buộc)</div>
        </div>
        
        <div class="col-md-3">
            <label class="form-label fw-semibold">Thứ tự hiển thị</label>
            <input asp-for="SortOrder" class="form-control" type="number" min="0" value="0" />
            <span asp-validation-for="SortOrder" class="text-danger"></span>
            <div class="form-text">Số càng nhỏ hiển thị càng trước</div>
        </div>
        
        <div class="col-md-3">
            <label class="form-label fw-semibold">Trạng thái</label>
            <select asp-for="IsActive" class="form-select">
                <option value="true">Hoạt động</option>
                <option value="false">Không hoạt động</option>
            </select>
        </div>
        
        <div class="col-md-12">
            <label class="form-label fw-semibold">Ảnh banner</label>
            <input type="file" name="imageFile" class="form-control" accept="image/*" required />
            <div class="form-text">Chọn ảnh banner (JPG, PNG, GIF) - Kích thước tối đa 5MB</div>
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>
        
        <div class="col-12">
            <div class="d-flex gap-3">
                <button type="submit" class="btn btn-primary btn-lg">
                    <i class="fas fa-save me-2"></i>Tạo Banner
                </button>
                <a href="@Url.Action("Index", "AdminBanner")" class="btn btn-secondary btn-lg">
                    Quay lại
                </a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 