@*
    Trang chi tiết sản phẩm - Giao diện tối ưu lại
*@
@{
    ViewData["Title"] = "Chi tiết sản phẩm - Nhà Thuốc Long Châu";
}
<div class="pb-5">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb mb-4 small bg-white px-3 py-2 rounded-3 shadow-sm">
            <li class="breadcrumb-item">
                <a href="/" class="text-decoration-none text-secondary">Trang Chủ</a>
            </li>
            <li class="breadcrumb-item active text-primary" aria-current="page">CateName</li>
        </ol>
    </nav>
    <div class="row g-4 align-items-start">
        <!-- Slider ảnh -->
        <div class="col-12 col-lg-5">
            <div class="bg-white rounded-4 shadow-sm p-4 h-100 d-flex flex-column align-items-center">
                <div class="w-100 mb-3">
                    <img id="mainImage" src="/images/products/vitamin_vien_sui_kudos_do.png" alt="Main Product Image" class="img-fluid rounded-4 shadow w-100" style="max-height: 320px; object-fit: contain; background: #f8fafc;" />
                </div>
                <div class="horizontal-slider position-relative w-100 mt-2">
                    <button class="btn btn-light btn-sm rounded-circle position-absolute start-0 top-50 translate-middle-y shadow" onclick="moveUp()" style="z-index: 10; left: -20px;">
                        <i class="fas fa-chevron-left"></i>
                    </button>
                    <div class="slider-wrapper d-flex align-items-center overflow-hidden" style="height: 70px; place-self: anchor-center;">
                        <div id="sliderImages" class="slider-images d-flex flex-row transition-transform" style="transform: translateX(0px);">
                            @for (var i = 0; i < 5; i++)
                            {
                                var src = i switch
                                {
                                    0 => "/images/products/vitamin_vien_sui_kudos_do.png",
                                    1 => "/images/products/vitamin_vien_sui_kudos_hong.png",
                                    2 => "/images/products/vitamin_vien_sui_kudos_vang.png",
                                    3 => "/images/products/vitamin_vien_sui_kudos_do.png",
                                    4 => "/images/products/vitamin_vien_sui_kudos_hong.png",
                                    _ => "/images/products/vitamin_vien_sui_kudos_do.png"
                                };
                                <img src="@src" alt="Image @(i + 1)" width="60" height="60" class="border bg-white shadow-sm rounded-3 cursor-pointer mx-2 @(i == 0 ? "selected-item-slider" : "")" onclick="imageClicked('@src')" style="object-fit:cover;transition:box-shadow .2s;" />
                            }
                        </div>
                    </div>
                    <button class="btn btn-light btn-sm rounded-circle position-absolute end-0 top-50 translate-middle-y shadow" onclick="moveDown()" style="z-index: 10; right: -20px;">
                        <i class="fas fa-chevron-right"></i>
                    </button>
                </div>
            </div>
        </div>
        <!-- Thông tin sản phẩm -->
        <div class="col-12 col-lg-7">
            <div class="bg-white rounded-4 shadow-sm p-4 h-100">
                <div class="mb-2 small text-muted">Thương hiệu: <span class="text-primary fw-semibold">Tên Thương Hiệu</span></div>
                <h1 class="h4 fw-bold mb-3 text-dark">
                    Viên uống Omexxel Ginkgo 120 Premium Omexxel hỗ trợ tốt cho não và tim mạch (60 viên)
                </h1>
                <div class="d-flex align-items-center gap-3 mb-3 small">
                    <span class="text-muted">Mã sản phẩm</span>
                    <span class="dot"></span>
                    <span class="text-muted">Đánh giá</span>
                    <span class="text-warning"><i class="fas fa-star"></i> 10</span>
                    <span class="dot"></span>
                    <span class="text-primary">10 bình luận</span>
                </div>
                <div class="mb-4">
                    <span id="main-product-price" class="fs-3 fw-bold text-gradient">1.850.000đ</span>
                    <span class="text-muted ms-2">/ Hộp</span>
                </div>
                <table class="table table-borderless mb-4 small">
                    <tbody>
                        <tr>
                            <td class="text-muted fw-medium pe-4">Danh mục</td>
                            <td><a href="#" class="text-decoration-none text-dark">Tên danh mục</a></td>
                        </tr>
                        <tr>
                            <td class="text-muted fw-medium pe-4">Xuất xứ thương hiệu</td>
                            <td><a href="#" class="text-decoration-none text-dark">Tên thương hiệu</a></td>
                        </tr>
                        <tr>
                            <td class="text-muted fw-medium pe-4">Nhà sản xuất</td>
                            <td><a href="#" class="text-decoration-none text-dark">Tên nhà sản xuất</a></td>
                        </tr>
                        <tr>
                            <td class="text-muted fw-medium pe-4">Mô tả ngắn</td>
                            <td class="text-truncate" style="max-width:250px;"><a href="#" class="text-decoration-none text-dark">Tên nhà sản xuất Tên nhà sản xuất Tên nhà sản xuất...</a></td>
                        </tr>
                    </tbody>
                </table>
                <div class="d-flex align-items-center mb-4 gap-3">
                    <label class="text-muted mb-0">Chọn số lượng</label>
                    <div class="quantity-input d-flex align-items-center border rounded-pill px-2 py-1 bg-light">
                        <button class="btn btn-link text-dark px-2 py-0 fs-5" onclick="decreaseQuantity()" style="outline:none;">-</button>
                        <input type="number" id="quantity" class="form-control text-center border-0 bg-light mx-1" value="1" min="1" max="5" readonly style="width: 50px; font-size:1.1rem;" />
                        <button class="btn btn-link text-dark px-2 py-0 fs-5" onclick="increaseQuantity()" style="outline:none;">+</button>
                    </div>
                </div>
                <button class="btn btn-gradient btn-lg rounded-pill px-5 py-3 w-100 fw-bold shadow" style="font-size:1.1rem;">
                    <i class="fas fa-cart-plus me-2"></i>THÊM VÀO GIỎ HÀNG
                </button>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background: #f4f7fb;
    }
    .selected-item-slider {
        border-color: #2563eb !important;
        box-shadow: 0 0 0 2px #60a5fa33;
    }
    .transition-transform {
        transition: transform 0.4s cubic-bezier(.4,2,.6,1);
    }
    .btn-gradient {
        background: linear-gradient(90deg, #3b82f6 0%, #60a5fa 100%);
        color: #fff;
        border: none;
    }
    .btn-gradient:hover {
        background: linear-gradient(90deg, #2563eb 0%, #3b82f6 100%);
        color: #fff;
    }
    .text-gradient {
        background: linear-gradient(90deg, #3b82f6, #60a5fa);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }
    .dot {
        width: 5px;
        height: 5px;
        background: #bdbdbd;
        border-radius: 50%;
        display: inline-block;
        margin: 0 6px;
    }
    .slider-images img:hover, .slider-images img.selected-item-slider {
        box-shadow: 0 2px 8px #60a5fa44;
        border-color: #2563eb !important;
        z-index: 2;
    }
    .horizontal-slider {
        position: relative;
        width: 100%;
        margin-top: 10px;
    }
    .slider-images {
        /* Remove flex-direction for horizontal */
    }
    .slider-images img {
        margin: 0 6px;
    }
    /* Responsive styles for mobile */
    media (max-width: 991px) {
        .horizontal-slider { margin: 0 auto 1rem auto; }
        .col-lg-5, .col-lg-7 { min-width: 100%; }
    }
</style>

<script>
    let currentPosition = 0;
    const imageWidth = 72; // 60px img + 2*6px margin
    const totalImages = 5;
    const visibleImages = 4;

    function moveUp() { // left
        if (currentPosition > 0) {
            currentPosition--;
            updateSlider();
        }
    }

    function moveDown() { // right
        if (currentPosition < totalImages - visibleImages) {
            currentPosition++;
            updateSlider();
        }
    }

    function imageClicked(src) {
        const mainImage = document.getElementById('mainImage');
        mainImage.src = src;
        const sliderImages = document.getElementById('sliderImages').querySelectorAll('img');
        sliderImages.forEach(img => img.classList.remove('selected-item-slider'));
        const clickedImg = Array.from(sliderImages).find(img => img.src === src);
        if (clickedImg) clickedImg.classList.add('selected-item-slider');
    }

    function updateSlider() {
        const sliderImages = document.getElementById('sliderImages');
        sliderImages.style.transform = `translateX(${-imageWidth * currentPosition}px)`;
    }

    function decreaseQuantity() {
        const quantity = document.getElementById('quantity');
        if (parseInt(quantity.value) > 1) {
            quantity.value = (parseInt(quantity.value) - 1).toString();
        }
    }

    function increaseQuantity() {
        const quantity = document.getElementById('quantity');
        if (parseInt(quantity.value) < 5) {
            quantity.value = (parseInt(quantity.value) + 1).toString();
        }
    }

    // Khởi tạo ảnh đầu tiên
    document.addEventListener('DOMContentLoaded', () => {
        const firstImage = document.getElementById('sliderImages').querySelector('img');
        if (firstImage) imageClicked(firstImage.src);
    });
</script>