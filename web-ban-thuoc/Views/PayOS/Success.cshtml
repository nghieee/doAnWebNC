@model web_ban_thuoc.Models.Order
@{
    ViewData["Title"] = "Thanh toán thành công";
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-success shadow-lg">
                <div class="card-header bg-success text-white text-center">
                    <i class="fas fa-check-circle fa-3x mb-2"></i>
                    <h3 class="mb-0">Thanh toán thành công!</h3>
                </div>
                <div class="card-body text-center">
                    <h5 class="mb-3">Cảm ơn bạn đã mua hàng tại <span class="text-primary fw-bold">Nhà Thuốc Long Châu</span>!</h5>
                    <p class="mb-2">Mã đơn hàng: <span class="fw-bold text-success">#@Model?.OrderId</span></p>
                    <p class="mb-2">Tổng tiền: <span class="fw-bold">@Model?.TotalAmount?.ToString("N0") VNĐ</span></p>
                    <p class="mb-2">Trạng thái: <span class="badge bg-success">Đã thanh toán</span></p>
                    <p class="text-muted">Chúng tôi đã gửi xác nhận đơn hàng và thông tin thanh toán qua email cho bạn.</p>
                    <div class="d-flex justify-content-center gap-3 mt-4">
                        <a href="/" class="btn btn-outline-primary"><i class="fas fa-home me-2"></i>Về trang chủ</a>
                        <a href="/Cart/Index" class="btn btn-outline-secondary"><i class="fas fa-shopping-cart me-2"></i>Giỏ hàng</a>
                        <a href="/" class="btn btn-success"><i class="fas fa-list-alt me-2"></i>Xem đơn hàng</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 